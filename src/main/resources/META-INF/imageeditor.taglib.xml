<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
	version="2.0">
	<namespace>http://www.illucit.com/jsf/imageeditor</namespace>

	<tag>
		<description><![CDATA[Image Editor component.]]></description>
		<tag-name>imageEditor</tag-name>
		<component>
			<component-type>com.illucit.faces.component.ImageEditor</component-type>
			<renderer-type>com.illucit.faces.component.ImageEditorRenderer</renderer-type>
			<handler-class>com.illucit.faces.component.imageeditor.ImageEditorComponentHandler</handler-class>
		</component>
		<attribute>
			<description><![CDATA[Unique identifier of the component in a namingContainer.]]></description>
			<name>id</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Boolean value to specify the rendering of the component, when set to false component will not be rendered.]]></description>
			<name>rendered</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
		</attribute>
		<attribute>
			<description><![CDATA[]]></description>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[]]></description>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Binary data to stream or context relative path.]]></description>
			<name>value</name>
			<required>false</required>
			<type>java.lang.Object</type>
		</attribute>
		<attribute>
			<description><![CDATA[Name of the client side widget.]]></description>
			<name>widgetVar</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Javascript handler on successful saving.]]></description>
			<name>onsuccess</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Javascript handler on error during saving.]]></description>
			<name>onerror</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Initially selected color for paiting. Color is expected in format RRGGBB (hexadecimal, but without # symbol). Default is (#)000000 (black).]]></description>
			<name>initialColor</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Initially selected shape for paiting (one of rect, ellipse or line).]]></description>
			<name>initialShape</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Method expression to listen file upload events.]]></description>
			<name>fileUploadListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
		</attribute>
		<attribute>
			<description><![CDATA[Label for Save Button.]]></description>
			<name>labelSave</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Label for Download Button.]]></description>
			<name>labelDownload</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
	</tag>

</facelet-taglib>
